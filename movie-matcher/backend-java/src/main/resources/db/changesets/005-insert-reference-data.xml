    <!-- Insert age ratings for US -->
    <changeSet id="032-insert-age-ratings-us" author="movie-matcher">
        <insert tableName="age_ratings">
            <column name="code" value="G"/>
            <column name="country_id" valueComputed="(SELECT id FROM countries WHERE code = 'US')"/>
            <column name="description" value="General Audiences"/>
        </insert>
        <insert tableName="age_ratings">
            <column name="code" value="PG"/>
            <column name="country_id" valueComputed="(SELECT id FROM countries WHERE code = 'US')"/>
            <column name="description" value="Parental Guidance Suggested"/>
        </insert>
        <insert tableName="age_ratings">
            <column name="code" value="PG-13"/>
            <column name="country_id" valueComputed="(SELECT id FROM countries WHERE code = 'US')"/>
            <column name="description" value="Parents Strongly Cautioned"/>
        </insert>
        <insert tableName="age_ratings">
