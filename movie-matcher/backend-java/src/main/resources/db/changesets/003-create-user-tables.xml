<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="017-create-user-ratings-table" author="movie-matcher">
        <createTable tableName="user_ratings">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="movie_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="rating" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="watched_at" type="TIMESTAMP"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="user_ratings"
                                 baseColumnNames="movie_id"
                                 constraintName="fk_user_ratings_movie"
                                 referencedTableName="movies"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <addUniqueConstraint tableName="user_ratings"
                            columnNames="user_id, movie_id"
                            constraintName="uk_user_ratings_user_movie"/>

        <sql>
            ALTER TABLE user_ratings
            ADD CONSTRAINT chk_user_ratings_rating
            CHECK (rating BETWEEN 1 AND 10)
        </sql>
    </changeSet>

    <changeSet id="018-create-user-watchlist-table" author="movie-matcher">
        <createTable tableName="user_watchlist">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="movie_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="added_at" type="TIMESTAMP" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="user_watchlist"
                                 baseColumnNames="movie_id"
                                 constraintName="fk_user_watchlist_movie"
                                 referencedTableName="movies"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <addUniqueConstraint tableName="user_watchlist"
                            columnNames="user_id, movie_id"
                            constraintName="uk_user_watchlist_user_movie"/>
    </changeSet>

</databaseChangeLog>
